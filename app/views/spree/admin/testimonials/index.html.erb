<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<div class='toolbar'>
  <ul class='actions'>
    <li id="new_testimonial_link">
      <%= button t('actions.create') %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%= t("testimonials") %></h1>

<table class="index">
	<tr>
		<th><%= t("testimonial_name") %></th>
		<th><%= t("email") %></th>
		<th><%= t("testimonial_body") %></th>
		<th colspan='2'><%= t("action") %></th>
  </tr>
	<tbody>
    	<% @testimonials.each do |testimonial| %>
		<tr class="<%= cycle('even', 'odd') %>" id="<%= dom_id(testimonial) %>">
			<td>
				<%= testimonial.name %>
			</td>
			<td>
				<%= testimonial.email %>
			</td>
			<td>
				<%= testimonial.body %>
			</td>

      <% action = testimonial.approved? ? :deny : :approve %>
      <td>
        <%= render :partial => "spree/admin/testimonials/approve_deny_button", :locals=>{:action=>action, :testimonial=>testimonial} %>
      </td>
			<td>
        <%= link_to_edit testimonial %> &nbsp;
        <%= link_to_delete testimonial %>
	    </td>
		</tr>
		<% end %>
	</tbody>
</table>

